FROM mesaguy/debian-7-kitchen-base-x86_64:latest

# Update repo definitions
RUN apt-get update && \
# Install python for ansible
apt-get install -y python && \
# Clean (purge) the repo cache
apt-get clean && \
rm -rf /var/lib/apt/lists/* && \
# Purge logs
rm -rf /var/log/*

# Add your specific Ansible SSH public key. This only works when run via
# kitchen, when run with the following options in your .kitchen.yml file:
#
#    driver_config:
#      build_options:
#        build-arg: SSH_KEY=<%= File.read('.kitchen/docker_id_rsa.pub') %>
#
ARG SSH_KEY
RUN echo "$SSH_KEY" >> /home/kitchen/.ssh/authorized_keys && \
chmod 0600 /home/kitchen/.ssh/authorized_keys

# Image metadata
LABEL org.label-schema.vendor="MesaGuy" \
      org.label-schema.name="Debian Linux 7 (Wheezy) kitchen-ansible" \
      org.label-schema.description="Image boots Debian Linux 7 (Wheezy) via Upstart configured for kitchen ansible testing" \
      com.mesaguy.operatingsystem.eol="true"
