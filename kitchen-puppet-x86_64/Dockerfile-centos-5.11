FROM mesaguy/centos-5.11-kitchen-base-x86_64:latest

# Clean (purge) the repo cache
RUN yum -d1 -y clean all && \
# Install puppet for kitchen
yum install -y puppet && \
# Clean (purge) the repo cache
yum -d1 -y clean all && rm -rf /var/cache/yum/* && \
# Purge logs
rm -rf /var/log/*

# Image metadata
LABEL org.label-schema.vendor="MesaGuy" \
      org.label-schema.name="CentOS Linux 5.11 kitchen-puppet" \
      org.label-schema.description="Image boots CentOS Linux 5.11 via SysV init configured for kitchen puppet testing" \
      com.mesaguy.operatingsystem.eol="false"
