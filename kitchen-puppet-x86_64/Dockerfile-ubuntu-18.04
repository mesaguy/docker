FROM mesaguy/ubuntu-18.04-kitchen-base-x86_64:latest

# Update repo definitions
RUN apt update && \
# Install puppet for kitchen
apt install -y puppet && \
# Clean (purge) the repo cache
apt-get clean && \
rm -rf /var/lib/apt/lists/* && \
# Purge logs
rm -rf /var/log/*

# Image metadata
LABEL org.label-schema.vendor="MesaGuy" \
      org.label-schema.name="Ubuntu Linux 18.04 (Bionic Beaver) kitchen-puppet" \
      org.label-schema.description="Image boots Ubuntu Linux 18.04 (Bionic Beaver) via systemd configured for kitchen puppet testing" \
      com.mesaguy.operatingsystem.eol="false"
